{
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": "*.yaml",
      "options": {
        "singleQuote": false
      }
    }
  ],
  "tabWidth": 2,
  "printWidth": 100,
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "plugins": ["prettier-plugin-prisma"]
}
